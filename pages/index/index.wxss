.divide-line{
  height: 100vh;
  width: 1px;
  background: #1a1a1a;
  position: fixed;
  top: 0;
  right: 25vw;
}
.main-body {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.middle-area {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  overflow: hidden;
}
.block-container{
  position: relative;
  overflow: hidden;
  width: 64vw;
  height: 48vh;
  z-index: 5;
}
.block-open{
  transform: translateX(64vw);
  transition: transform 0.5s;
}
.block-img{
  width: 64vw;
  height: 48vh;
}
.viewport {
  height: 60vh;
  width: 90vw;
  z-index: 9;
  position: absolute;
}
.camera-style {
  height: 50vh;
  width: 70vw;
  position: absolute;
}
.history-btn {
  width: 100rpx;
  height: 100rpx;
}
.top-area{
  display: inline-flex;
  align-items: center;
  width: 90vw;
  justify-content: flex-end;
}
.control-area {
  margin-right: 100rpx;
  display: flex;
  align-items: center;
}
.bottom-area{
  width: 90vw;
  margin: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.decoration-bar{
  width: 50rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.shoot-btn{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}
.record-light{
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0);
  margin-right: 120rpx;
}
.active {
  filter: none;
}